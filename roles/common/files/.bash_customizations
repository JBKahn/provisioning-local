function pr_for_sha {
  pr=$(git log --merges --ancestry-path --oneline $1..master | grep 'pull request' | tail -n1 | awk '{print $5}' | cut -c2-)
  base_url=$(git config --get remote.origin.url |  sed 's/.*\@//' | sed 's/\:/\//' | sed 's/\.git.*//')
  xdg-open "https://${base_url}/pull/${pr##*/}/"
}

